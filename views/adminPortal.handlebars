<script src="adminPortal.js" defer></script>
<div class="form-container" id="admin-portal-container">
  <h2>
    View orders, sellers or customers information
  </h2>
  <div class="ui top attached tabular menu">
    <a class="active item orders-btn">
      Orders
    </a>
    <a class="item sellers-btn">
      Sellers
    </a>
    <a class="item customers-btn">
      Customers
    </a>

  </div>

  <div id="orders-table">
    <table class="ui celled table">
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Customer Name</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>
      </tbody>

      {{#each customerOrders}}
      {{> customerOrder}}
      {{/each}}
    </table>
  </div>


  <div id="customers-table">
    <table class="ui celled table">
      <thead>
        <tr>
          <th>Username</th>
          <th>Name</th>

          <th>Email</th>
          <th>Phone Number</th>
        </tr>
      </thead>
      <tbody>
        {{#each customerAdminItems}}
        {{> customerAdminItem}}
        {{/each}}
      </tbody>
    </table>
  </div>

  <div id="sellers-table">
    <table class="ui celled table">
      <thead>
        <tr>
          <th>Username</th>
          <th>Name</th>

          <th>Email</th>
          <th>Phone Number</th>
        </tr>
      </thead>
      <tbody>
        {{#each sellerAdminItems}}
        {{> sellerAdminItem}}
        {{/each}}
      </tbody>
    </table>
  </div>
</div>