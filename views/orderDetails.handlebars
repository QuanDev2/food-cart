<div class="form-container" id="order-details-container">
  <h2>Order Details</h2>
  <table class="ui celled table" id="orders-table">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Dish Name</th>
        <th>Customer Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    </tbody>

    {{#each orderDetails}}
    {{> orderDetailsItem}}
    {{/each}}
  </table>
</div>