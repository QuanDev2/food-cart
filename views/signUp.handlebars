<script type="module" src="signUp.js" defer></script>

<div class="form-container" id="sign-up-form-container">
  <h2>Create account</h2>
  <form class="ui form" id="sign-up-form">
    <div class="field">
      <label>Full name</label>
      <input required type="text" name="fullName" placeholder="Full Name" id="full-name-input" />
    </div>
    <div class="field">
      <label>Username</label>
      <input required type="text" name="username" placeholder="User Name" id="username-input" />
    </div>
    <div class="field">
      <label>Password</label>
      <input required type="password" name="password" placeholder="Password" id="password-input" />
    </div>
    <div class="field">
      <label>Email</label>
      <input required type="email" name="email" placeholder="Email" id="email-input" />
    </div>
    <div class="field">
      <label>Phone Number</label>
      <input required type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name="phoneNumber" placeholder="123-456-7890"
        id="phone-input" />
    </div>

    <div class="ui radio  user-type-btn">
      <input type="radio" name="accountType" checked="checked" id="account-seller" value="seller" />
      <label for="account-seller">I am a seller</label>
      <br>
      <input type="radio" name="accountType" id="account-customer" value="customer" />
      <label for="account-customer">I am a customer</label>
    </div>

    <div class="field">
      <div class="ui checkbox">
        <input required type="checkbox" tabindex="0" class="hidden" />
        <label>I agree to the Terms and Conditions</label>
      </div>
    </div>
    <button class="ui button submit-btn blue" type="submit" style=" margin-top: 1rem;">
      Submit
    </button>
  </form>

  <div id="post-result">

  </div>

</div>